extends ./index.pug



block contenido

    div(ng-controller="shop")
        div(class="product-big-title-area")
            div(class="container")
                div(class="row")
                    div(class="col-md-12")
                        div(class="product-bit-title text-center")
                            h2 Shop
                      
    
        div(class="site-branding-area") 
            div(class="container")
                div(class="row")
                    div(class="col-sm-6")
                        div(class="shopping-item")
                            a(href="#myModal" data-toggle="modal" data-target="#myModal") Cart - 
                                span(class="cart-amunt") {{total}} 
                                
                        
                
                
            div(id="myModal" class="modal fade" role="dialog")
                div(class="modal-dialog")
                    div(class="modal-content")
                        div(class="modal-header")
                            button(type="button" class="close" data-dismiss="modal") &times;
                            h4(class="modal-title") Carrito
                      
                        div(class="modal-body")
                             form(method="post" action="#")
                                table(cellspacing="0" class="shop_table cart" arti.canti<0)
                                    thead
                                        tr
                                            th(class="product-remove") &nbsp;
                                            th(class="product-thumbnail") &nbsp;
                                            th(class="product-name") Product
                                            th(class="product-name") Cantidad
                                            th(class="product-price") Price
                                            th(class="product-subtotal") Total
                                                        
                                    tbody(ng-repeat="arti in car")
                                        tr(class="cart_item")
                                            td(class="product-remove")
                                                button(ng-click="carrito.delete(arti, $index); get_total();get_subTotal()") x
                                                                
        
                                            td(class="product-thumbnail")
                                                a(href="single-product.html")
                                                    img(width="145" height="145" alt="poster_1_up" class="shop_thumbnail" src="img/{{arti.imagenUrl}}")
                                                                
        
                                            td(class="product-name")
                                                a(href="single-product.html") {{arti.nombre}} 
                                                
                                            td(class="product-name")
                                                a(href="single-product.html") {{arti.canti}} 
                                                                
                    
                                            td(class="product-price")
                                                span(class="amount") {{arti.precio}} 
                                                            
                    
                                            td(class="product-subtotal")
                                                span(class="amount") {{arti.importe}} 
                                        h3 Subtotal: {{subtotal}}
                                        h3 Total: {{total}}
                                                            

                        div(class="modal-footer")
                            button(type="button" class="btn btn-default" data-dismiss="modal") Close

                                
        
        div(class="single-product-area")
            div(class="zigzag-bottom")
            div(class="container")
                div(class="row")
                    div(class="col-md-3 col-sm-6" ng-repeat="arti in articulos")
                        div(class="single-shop-product")
                            div(class="product-upper")
                                a(href="/{{arti._id}}")
                                    img(src="img/{{arti.imagenUrl}}" alt="")
                                    
                            
                            a(href="/{{arti._id}}")
                                h2  {{arti.nombre}}
                                
                            div(class="product-carousel-price")
                                ins $ {{arti.precio}}
                              
                            
                            div(class="product-option-shop")
                                input(type="number" ng-model="arti.canti")
                                button(ng-click="carrito.addCar(arti); get_total();get_noArticulos();get_subTotal()") Add to cart
                                
                                
                  
        div(class="row")
            div(class="col-md-12")
                div(class="product-pagination text-center")
                    nav
                        ul(class="pagination")
                            li
                                a(href="#" aria-label="Previous")
                                    span(aria-hidden="true") &laquo;
                            li 
                                a(href="#") 1
                            li 
                                a(href="#") 2
                            li
                                a(href="#") 3
                            li
                                a(href="#") 4
                            li  
                                a(href="#") 5
    
                            li
                                a(href="#" aria-label="Next")
                                    span(aria-hidden="true") &raquo;